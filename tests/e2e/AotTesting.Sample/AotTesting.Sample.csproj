<Project Sdk="ANcpLua.NET.Sdk.Test">
  <PropertyGroup>
    <TargetFramework>net10.0</TargetFramework>
    <OutputType>Exe</OutputType>
    <ImplicitUsings>enable</ImplicitUsings>
    <IsTestProject>true</IsTestProject>

    <!-- Enable AOT Testing Infrastructure -->
    <EnableAotTesting>true</EnableAotTesting>

    <!-- Skip xUnit injection since this project uses AOT test methods -->
    <SkipXunitInjection>true</SkipXunitInjection>
  </PropertyGroup>

  <!-- Reference the AOT testing utilities package (version managed by CPM) -->
  <ItemGroup>
    <PackageReference Include="ANcpLua.Roslyn.Utilities.Testing.Aot" VersionOverride="0.0.0-local" />
  </ItemGroup>
</Project>
