<Project>
  <!-- Import version info for consistent package versioning -->
  <Import Project="$(MSBuildThisFileDirectory)../common/Version.props"/>

  <PropertyGroup>
    <ANcpLuaSdkName>ANcpLua.NET.Sdk</ANcpLuaSdkName>
    <_MustImportMicrosoftNETSdk Condition="'$(UsingMicrosoftNETSdk)' != 'true'">true</_MustImportMicrosoftNETSdk>

    <CustomBeforeDirectoryBuildProps>$(CustomBeforeDirectoryBuildProps);$(MSBuildThisFileDirectory)../common/Common.props</CustomBeforeDirectoryBuildProps>
    <BeforeMicrosoftNETSdkTargets>$(BeforeMicrosoftNETSdkTargets);$(MSBuildThisFileDirectory)../common/Common.targets</BeforeMicrosoftNETSdkTargets>
  </PropertyGroup>

  <Import Project="Sdk.props" Sdk="Microsoft.NET.Sdk" Condition="'$(_MustImportMicrosoftNETSdk)' == 'true'"/>
  <!-- Import Common.props with guard to prevent MSB4011 when CustomBeforeDirectoryBuildProps already imported it -->
  <Import Project="$(MSBuildThisFileDirectory)../common/Common.props" Condition="'$(_ANcpLuaCommonPropsImported)' != 'true'"/>

  <!-- Enforcement and determinism/SourceLink -->
  <Import Project="$(MSBuildThisFileDirectory)../Enforcement/Enforcement.props"/>
  <Import Project="$(MSBuildThisFileDirectory)../Enforcement/DeterminismAndSourceLink.props"/>

  <!-- Testing auto-injection -->
  <Import Project="$(MSBuildThisFileDirectory)../Testing/Testing.props"/>
</Project>