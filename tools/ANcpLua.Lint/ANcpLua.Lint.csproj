<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net9.0</TargetFramework>
    <LangVersion>latest</LangVersion>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>

    <!-- Package as dotnet tool -->
    <PackAsTool>true</PackAsTool>
    <ToolCommandName>ancplua-lint</ToolCommandName>
    <PackageId>ANcpLua.Lint</PackageId>
    <Version>1.0.0</Version>
    <Description>.NET Architecture Linter - Enforces Version.props, CPM, and import patterns</Description>
    <Authors>ancplua</Authors>

    <!-- Disable CPM for this project -->
    <ManagePackageVersionsCentrally>false</ManagePackageVersionsCentrally>
  </PropertyGroup>

</Project>
